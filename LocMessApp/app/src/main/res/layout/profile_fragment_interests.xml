<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="24dp"
        android:paddingBottom="24dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add New Interests"
            android:textSize="18sp"
            android:textStyle="bold" />


        <AutoCompleteTextView
            android:id="@+id/autocomplete_topic"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:completionThreshold="1"
            android:hint="Insert Topic (Ex: Sports)"
            android:textSize="14sp" />

        <AutoCompleteTextView
            android:id="@+id/autocomplete_value"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:completionThreshold="1"
            android:hint="Insert Value (Ex. Football)"
            android:textSize="14sp" />

        <Button
            android:id="@+id/button_add_interest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Interest" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Interests"
            android:paddingTop="14sp"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/layout_interests"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="10sp" />

    </LinearLayout>

</ScrollView>